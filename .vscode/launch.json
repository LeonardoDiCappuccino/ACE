{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "cortex-debug",
            "request": "attach",
            "cwd": "${workspaceRoot}",
            "executable": "${command:cmake.launchTargetPath}",
            "preLaunchTask": "Debug Server",
            "servertype": "external",
            "gdbTarget": "localhost:3333",
            "overrideAttachCommands": [
                "break main",
                "load",
                // "monitor reset halt"
            ],
                "postStartSessionCommands": [
                "continue",
                "set print pretty on",
            ],
            "runToEntryPoint": "main",
            "showDevDebugOutput": "none"
        },
        // Some timeout error (won't even start)
        {
            "name": "Debug (pyOCD)",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "pyocd",
            "cwd": "${workspaceRoot}",
            "executable": "${command:cmake.launchTargetPath}",
            "device": "stm32f042k6",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "none"
        }
    ]
}