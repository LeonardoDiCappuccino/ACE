{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build launch target",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${command:cmake.buildDirectory}",
                "--target",
                "${command:cmake.launchTargetName}",
                "--config",
                "${command:cmake.buildType}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "never",
                "panel": "shared"
            }
        },
        {
            "label": "Upload",
            "type": "shell",
            "command": "pyocd",
            "args": [
                "flash",
                "--target",
                "stm32f042k6",
                "${command:cmake.launchTargetPath}",
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Debug Server",
            "type": "shell",
            "command": "pyocd",
            "args": [
                "gdbserver",
                "--target",
                "stm32f042k6",
            ],
            "isBackground": true,
            "presentation": {
                "reveal": "never",
                "panel": "dedicated",
                "close": true
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^",
                    "line": 1
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": ".*GDB server listening.*"
                }
            }
        },
    ]
}
